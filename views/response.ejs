<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Response - CureAI</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.4/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-200">

  <!-- Header -->
  <header class="bg-blue-600 p-4">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white hover:text-gray-200">CureAI</a>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex justify-center items-center mt-10">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
      <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Diagnosis & Treatment</h2>
        <!-- Display Image -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Uploaded Image:</h3>
        <img src="../<%= imagePath %>" alt="Related Image" class="max-w-full rounded-lg shadow-md">
      </div>

      <!-- Display Conditions -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Conditions:</h3>
        <ul class="list-disc pl-5">
          <% conditions.forEach(function(condition) { %>
            <li class="text-gray-600"><%= condition %></li>
          <% }) %>
        </ul>
      </div>

      <!-- Display Severity -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Severity:</h3>
        <p class="text-gray-600"><%= severity %></p>
      </div>

      <!-- Display Treatment -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Treatment:</h3>
        <p class="text-gray-600"><%= treatment %></p>
      </div>

    
      <!-- Button to go back -->
      <div class="text-center mt-6">
        <a href="/" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Back to Home</a>
      </div>
    </div>
  </main>

</body>
</html>
